@model MovieQuery.Models.MovieInformationViewModel

@{
    ViewData["Title"] = "View Movie";
}

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="View">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Movie.Id" />
            <div class="form-group">
                <label asp-for="Movie.Title" class="control-label"></label>
                <text asp-for="Movie.Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Movie.ReleaseDate" class="control-label"></label>
                <text asp-for="Movie.ReleaseDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Movie.Genre" class="control-label"></label>
                <text asp-for="Movie.Genre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Movie.Rating" class="control-label"></label>
                <text asp-for="Movie.Rating" class="form-control" />
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Credits[0].FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Credits[0].LastName)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Credits)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


